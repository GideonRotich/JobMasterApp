<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignupActivity">




    <TextView
        android:id="@+id/email_textsijui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginRight="20dp"
        android:layout_marginTop="14dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/darkdarkblue"
        >

    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/image_login"
        android:background="@drawable/ic_rectangle_login">




        <TextView
            android:id="@+id/email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FullName"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="7dp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="4dp">

        </TextView>

        <EditText
            android:id="@+id/fullname_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_text"
            android:hint="Fullname"
            android:padding="6dp"
            android:textColorHint="@android:color/black"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:background="@drawable/ic_rectangle_loginbtn"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="8dp">

        </EditText>

        <TextView
            android:id="@+id/password_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@+id/fullname_signup"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="4dp">

        </TextView>

        <EditText
            android:id="@+id/email_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password_text"
            android:hint="Email"
            android:padding="6dp"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="16sp"
            android:background="@drawable/ic_rectangle_loginbtn"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="8dp">

        </EditText>

        <TextView
            android:id="@+id/professiont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proffessional Title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@+id/email_signup"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="4dp">

        </TextView>

        <EditText
            android:id="@+id/proffession_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/professiont"
            android:hint="Proffessional title"
            android:padding="6dp"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="16sp"
            android:background="@drawable/ic_rectangle_loginbtn"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="8dp">

        </EditText>

        <TextView
            android:id="@+id/password_confirm_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Category"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@+id/proffession_text"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="4dp">

        </TextView>

        <Spinner
            android:id="@+id/techtextone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password_confirm_two"
            android:background="@color/black"
            android:textSize="16sp"
            android:spinnerMode="dialog"
            android:textColor="@android:color/black"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="8dp">

        </Spinner>

        <TextView
            android:id="@+id/wapione"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/techtextone"
            android:textColorHint="@android:color/black"
            android:textSize="16sp"
            android:visibility="gone"
            android:textColor="@android:color/black"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="8dp">

        </TextView>
        <TextView
            android:id="@+id/password_tttt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_below="@+id/wapione"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="4dp">

        </TextView>



        <EditText
            android:id="@+id/password_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password_tttt"
            android:hint="Password"
            android:padding="6dp"
            android:inputType="textPassword"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="16sp"
            android:background="@drawable/ic_rectangle_loginbtn"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="8dp">

        </EditText>

        <TextView
            android:id="@+id/forgot_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By Signing up you agree to the JobMaster Terms of service   and Cookie Policy"
            android:layout_below="@+id/password_signup"
            android:layout_centerHorizontal="true"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp">

        </TextView>

        <Button
            android:id="@+id/btnsignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/forgot_two"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:backgroundTint="@color/giddy"
            android:background="@drawable/ic_rectangle_loginblue"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp">

        </Button>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnsignup"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="Or"
            android:id="@+id/wajuaniniwetu"
            android:textColor="@color/black">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wajuaniniwetu"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="Sign up as Employer"
            android:id="@+id/wajuakwambaniniwetu"
            android:textColor="@color/darkdarkblue">

        </TextView>








    </RelativeLayout>


</RelativeLayout>